{
    "compilerOptions": {
        "lib": [
            "es2020"
        ],
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule" : true
    },
    "include": [
        "src/**/*",
        "server.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}